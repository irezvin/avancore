<IfModule mod_version_version.c>
    <IfVersion < 2.4>
        Order Deny,Allow
        Deny from All
        Allow from 127.0.0.1
    </IfVersion>

    <IfVersion >= 2.4>
        Require local
    </IfVersion>
</IfModule>
<IfModule !mod_version.c>
    Order Deny,Allow
    Deny from All
    Allow from 127.0.0.1
</IfModule>